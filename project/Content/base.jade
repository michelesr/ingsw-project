doctype html
html(lang='en', ng-app='app')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Project
    link(rel='stylesheet', type='text/css', href='Content/styles/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='Content/styles/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='Content/styles/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='Content/styles/signin.css')
    link(rel='stylesheet', type='text/css', href='Content/styles/dashboard.css')
    script(type='text/javascript', src='Content/scripts/bootstrap.min.js')
    script(type='text/javascript', src='Content/scripts/angular.min.js')
    script(type='text/javascript', src='Content/scripts/ui-bootstrap.min.js')
    script(type='text/javascript', src='Content/scripts/angular-ui-router.min.js')
    script(type='text/javascript', src='Content/scripts/statehelper.min.js')
    script(type='text/javascript', src='Content/scripts/angular-resource.min.js')
    script(type='text/javascript', src='Content/scripts/app.js')
    script(type='text/javascript', src='Content/scripts/services.js')
    script(type='text/javascript', src='Content/scripts/controllers.js')

  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(ui-sref='root.home') Web Project
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(ui-sref='root.login') Login
            li
              a(ui-sref='root.users.{{ auth.user }}') Profile
            li
              a(ui-sref='root.info') Info
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          ul.nav.nav-sidebar
            li(ng-repeat='c in sidebar' ui-sref-active='active')
              a(ui-sref='{{ c.state }}')
                span(class='fa {{ c.icon }}')
                span  {{ c.name }}
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          ui-view
